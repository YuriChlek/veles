{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true // для однозначного регістру імен файлів
    },
    "include": ["*/**/*.ts"],
    "exclude": ["node_modules"]
}