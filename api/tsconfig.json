{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "useUnknownInCatchVariables": false,
        "sourceMap": true,
        "allowJs": false
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
